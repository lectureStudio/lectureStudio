<?xml version="1.0" encoding="UTF-8"?>
<Panel layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)">
	<Panel layout="GridBagLayout" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="0" gridwidth="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />

		<TitledSeparator text="stream.settings.web.api" name="extendedUI">
			<gridbagconstraints gridx="0" gridy="0" gridwidth="2" anchor="GridBagConstraints.WEST" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="5,0,5,0" />
		</TitledSeparator>
		<Label text="stream.settings.server.name">
			<gridbagconstraints gridx="0" gridy="1" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,15" />
		</Label>
		<TextField id="serverNameTextField" columns="30">
			<gridbagconstraints gridx="0" gridy="2" fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST" insets="5,0,15,10" />
		</TextField>
		<Label text="stream.settings.access.token">
			<gridbagconstraints gridx="0" gridy="3" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,15" />
		</Label>
		<TextField id="accessTokenTextField" columns="30">
			<gridbagconstraints gridx="0" gridy="4" fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST" insets="5,0,15,10" />
		</TextField>
		<Button id="updateCoursesButton" text="button.check">
			<gridbagconstraints gridx="1" gridy="4" weightx="0.3" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
		</Button>

		<TitledSeparator text="stream.settings.screen.share" name="extendedUI">
			<gridbagconstraints gridx="0" gridy="5" gridwidth="2" anchor="GridBagConstraints.WEST" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="5,0,5,0" />
		</TitledSeparator>
		<Label text="stream.settings.screen.share.profile">
			<gridbagconstraints gridx="0" gridy="6" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,15" />
		</Label>
		<ComboBox id="screenProfileCombo">
			<gridbagconstraints gridx="0" gridy="7" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
		</ComboBox>
	</Panel>

	<box.vglue>
		<gridbagconstraints gridx="0" gridy="8" weighty="1.0" />
	</box.vglue>
	<HBox gap="5">
		<gridbagconstraints gridx="0" gridy="9" gridwidth="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />
		<box.hglue />
		<Button id="resetButton" text="button.reset"/>
		<Button id="closeButton" text="button.close"/>
	</HBox>
</Panel>