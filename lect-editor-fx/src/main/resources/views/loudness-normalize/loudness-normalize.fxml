<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<fx:root type="StackPane" styleClass="loudness-normalize"
		 xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
	<VBox styleClass="content" prefWidth="250">
		<Label fx:id="loudnessInfotext" text="%loudness.normalize.info"
			   wrapText="true"/>

		<HBox styleClass="lufs-area" alignment="CENTER_LEFT">
			<Label fx:id="lufsValueLabel" text="%loudness.normalize.selection.label"/>
			<TextField fx:id="lufsValueTextField" alignment="CENTER_RIGHT">
			</TextField>
		</HBox>

		<HBox alignment="BOTTOM_RIGHT" styleClass="buttons" VBox.vgrow="ALWAYS">
			<Button fx:id="submitButton" text="%loudness.normalize.button.save"/>
		</HBox>
	</VBox>
</fx:root>
