<?xml version="1.0" encoding="UTF-8"?>
<Panel layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)">
	<Label text="start.screen.sharing.windows" border="EmptyBorder(0, 0, 5, 0)">
		<gridbagconstraints gridx="0" gridy="0" anchor="GridBagConstraints.WEST" />
	</Label>
	<Label text="start.screen.sharing.windows.info" border="EmptyBorder(0, 0, 5, 0)" icon="warning.svg, 22">
		<gridbagconstraints gridx="0" gridy="1" anchor="GridBagConstraints.WEST" />
	</Label>
	<Panel id="windowContainer" border="EmptyBorder(5, 20, 20, 20)">
		<gridbagconstraints gridx="0" gridy="2" weightx="1" weighty="1" insets="0,0,2,0" anchor="GridBagConstraints.WEST" fill="GridBagConstraints.BOTH" />
	</Panel>

	<Label text="start.screen.sharing.screens" border="EmptyBorder(0, 0, 5, 0)">
		<gridbagconstraints gridx="0" gridy="3" anchor="GridBagConstraints.WEST" />
	</Label>
	<Panel id="screenContainer" border="EmptyBorder(5, 20, 0, 20)">
		<gridbagconstraints gridx="0" gridy="4" weightx="1" insets="0,0,2,0" anchor="GridBagConstraints.WEST" fill="GridBagConstraints.BOTH" />
	</Panel>

	<HBox>
		<gridbagconstraints gridx="0" gridy="5" insets="20,0,0,0" weightx="1.0" anchor="GridBagConstraints.EAST" fill="GridBagConstraints.HORIZONTAL" />
		<ComboBox id="screenProfileCombo" />
		<box.hglue />
		<Button id="startButton" text="start.screen.sharing.start" />
		<box.hstrut width="5" />
		<Button id="closeButton" text="button.close" />
	</HBox>
</Panel>