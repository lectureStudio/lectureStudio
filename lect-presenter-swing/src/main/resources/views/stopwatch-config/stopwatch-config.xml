<?xml version="1.0" encoding="UTF-8"?>
<Panel layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)">
    <VBox id="contentContainer">
        <gridbagconstraints gridx="0" gridy="0" insets="0,0,2,0" anchor="GridBagConstraints.WEST" />
        <Panel layout="GridBagLayout" border="EmptyBorder(0, 0, 0, 0)">
            <VBox>
                <gridbagconstraints gridx="0" gridy="0" fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.NORTH" />
                <ButtonGroup>
                    <RadioButton id="stopwatchRadioButton" selected="true" text="stopwatch.settings.stopwatch" action="typeAction" actionCommand="STOPWATCH" gridx="0" gridy="0"/>
                    <RadioButton id="timerRadioButton" text="stopwatch.settings.timer" action="typeAction" actionCommand="TIMER" gridx="0" gridy="1"/>
                </ButtonGroup>
            </VBox>
            <Label text="stopwatch.settings.setTime">
                <gridbagconstraints gridx="0" gridy="1" gridwidth="2" anchor="GridBagConstraints.WEST" insets="15,0,2,0" />
            </Label>
            <TextField id="setTimerTextField">
                <gridbagconstraints gridx="0" gridy="2" weightx="1" fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST" insets="5,0,2,0" />
                <Filter class="org.lecturestudio.swing.filter.StopwatchFilter" />
            </TextField>
            <Label id="errorLabel" foreground="B30000">
                <gridbagconstraints gridx="0" gridy="3" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,5,0" />
            </Label>
        </Panel>
    </VBox>
    <HBox>
        <gridbagconstraints gridx="0" gridy="1" insets="10,0,0,0" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />
        <box.hglue />
        <Button id="startButton" text="stopwatch.save" />
        <box.hstrut width="5" />
        <Button id="closeButton" text="button.close" />
    </HBox>
</Panel>