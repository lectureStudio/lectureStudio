<?xml version="1.0" encoding="UTF-8"?>
<Panel layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)">
	<Panel layout="GridBagLayout" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="0" gridwidth="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />

		<CheckBox id="recordStreamCheckBox" text="stream.settings.record">
			<gridbagconstraints gridx="0" gridy="0" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
		</CheckBox>
		<TitledSeparator text="stream.settings.web.api" name="extendedUI">
			<gridbagconstraints gridx="0" gridy="1" gridwidth="2" anchor="GridBagConstraints.WEST" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="5,0,5,0" />
		</TitledSeparator>
		<Label text="stream.settings.server.name">
			<gridbagconstraints gridx="0" gridy="2" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,15" />
		</Label>
		<TextField id="serverNameTextField" columns="30">
			<gridbagconstraints gridx="0" gridy="3" fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST" insets="5,0,15,10" />
		</TextField>
		<Label text="stream.settings.access.token">
			<gridbagconstraints gridx="0" gridy="4" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,15" />
		</Label>
		<TextField id="accessTokenTextField" columns="30">
			<gridbagconstraints gridx="0" gridy="5" fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST" insets="5,0,5,10" />
		</TextField>
		<Button id="checkTokenButton" text="button.check">
			<gridbagconstraints gridx="1" gridy="5" weightx="0.3" anchor="GridBagConstraints.WEST" insets="5,0,5,0" />
		</Button>
		<Label id="tokenErrorLabel" text="" foreground="red">
			<gridbagconstraints gridx="0" gridy="6" gridwidth="2" anchor="GridBagConstraints.WEST" insets="0,0,15,0" />
		</Label>

		<TitledSeparator text="stream.settings.screen.share" name="extendedUI">
			<gridbagconstraints gridx="0" gridy="7" gridwidth="2" anchor="GridBagConstraints.WEST" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="5,0,5,0" />
		</TitledSeparator>
		<Label text="stream.settings.screen.share.profile">
			<gridbagconstraints gridx="0" gridy="8" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,15" />
		</Label>
		<ComboBox id="screenProfileCombo">
			<gridbagconstraints gridx="0" gridy="9" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
		</ComboBox>

		<TitledSeparator text="stream.settings.video.layout.window" name="extendedUI">
			<gridbagconstraints gridx="0" gridy="10" gridwidth="2" anchor="GridBagConstraints.WEST" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="5,0,5,0" />
		</TitledSeparator>
		<Label text="stream.settings.video.layout">
			<gridbagconstraints gridx="0" gridy="11" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,15" />
		</Label>
		<ComboBox id="videoLayoutCombo">
			<gridbagconstraints gridx="0" gridy="12" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
		</ComboBox>
	</Panel>

	<box.vglue>
		<gridbagconstraints gridx="0" gridy="13" weighty="1.0" />
	</box.vglue>
	<HBox gap="5">
		<gridbagconstraints gridx="0" gridy="14" gridwidth="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />
		<box.hglue />
		<Button id="resetButton" text="button.reset"/>
		<Button id="closeButton" text="button.close"/>
	</HBox>
</Panel>