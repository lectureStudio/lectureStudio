<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Properties>
		<Property name="filename">presenter</Property>
	</Properties>

	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p %c{1}:%L - %m%n" />
		</Console>
		<RollingFile
				name="JavaLookup"
				fileName="${sys:logFilePath}/${filename}.log"
				filePattern="${sys:logFilePath}/${filename}-%d{MM-dd-yyyy}-%i.log">
			<PatternLayout header="# ${java:runtime} %n# ${java:vm} %n# ${java:os} %n">
				<Pattern>%d %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
				<SizeBasedTriggeringPolicy size="100 MB"/>
			</Policies>
		</RollingFile>
		<RollingFile
				name="FILE"
				fileName="${sys:logFilePath}/${filename}.log"
				filePattern="${sys:logFilePath}/${filename}-%d{MM-dd-yyyy}-%i.log"
				immediateFlush="true">
			<PatternLayout pattern="%d %-5p %c{1}:%L - %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
				<SizeBasedTriggeringPolicy size="100 MB"/>
			</Policies>
		</RollingFile>
	</Appenders>

	<Loggers>
		<Logger name="org.lecturestudio" level="debug" />
		<Logger name="org.lecturestudio.presenter.api.recording" level="debug" />
		<Logger name="org.apache.catalina" level="error" />
		<Logger name="org.apache.openjpa" level="error" />
		<Logger name="org.jboss" level="error" />

		<Root level="error">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="FILE" />
		</Root>
	</Loggers>
</Configuration>