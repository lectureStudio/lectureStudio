<?xml version="1.0" encoding="UTF-8"?>
<Panel layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)">
	<Label text="dlz.settings.room">
		<gridbagconstraints gridx="0" gridy="0" anchor="GridBagConstraints.WEST" insets="5,0,5,0" />
	</Label>
	<ComboBox id="roomsCombo">
		<gridbagconstraints gridx="1" gridy="0" anchor="GridBagConstraints.WEST" insets="5,0,5,0" />
		<renderer class="org.lecturestudio.presenter.swing.combobox.DLZRoomRenderer" />
	</ComboBox>
	<Label text="dlz.settings.token">
		<gridbagconstraints gridx="0" gridy="6" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,0" />
	</Label>
	<TextArea id="dlzAccessTokenTextField" lineWrap="true" wrapStyleWord="true">
		<gridbagconstraints gridx="0" gridy="7" weightx="1" fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
	</TextArea>
	<Button id="refreshAccessTokenButton" text="Aktualisieren">
		<gridbagconstraints gridx="1" gridy="7" anchor="GridBagConstraints.WEST" insets="5,5,15,0" />
	</Button>
	<box.vglue>
		<gridbagconstraints gridx="0" gridy="8" weighty="1.0" />
	</box.vglue>
	<HBox gap="5">
		<gridbagconstraints gridx="0" gridy="9" gridwidth="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />
		<box.hglue />
		<Button id="resetButton" text="button.reset"/>
		<Button id="closeButton" text="button.close"/>
	</HBox>
</Panel>