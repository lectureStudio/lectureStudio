<?xml version="1.0" encoding="UTF-8"?>
<Panel name="shortcuts.title">
	<Panel layout="GridBagLayout" border="EmptyBorder(0, 20, 20, 20)">
		<VBox border="EmptyBorder(0, 0, 10, 0)">
			<gridbagconstraints gridx="0" gridy="0" anchor="GridBagConstraints.NORTHWEST" weightx="1.0" weighty="1.0" fill="GridBagConstraints.BOTH" />

			<ScrollPane>
				<Table id="shortcutsTable" autoCreateColumnsFromModel="false" fillsViewportHeight="true" rowHeight="25" selectionMode="ListSelectionModel.SINGLE_SELECTION">
					<TableColumn headerValue="shortcuts.description" />
					<TableColumn headerValue="shortcuts.keys" />
				</Table>
			</ScrollPane>
		</VBox>
		<HBox gap="5">
			<gridbagconstraints gridx="0" gridy="1" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />
			<box.hglue />
			<Button id="closeButton" text="button.close"/>
		</HBox>
	</Panel>
</Panel>